<Window x:Class="Minecraft_Server_Maker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Minecraft_Server_Maker"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Label Content="Enter the Server Name: " />
            <TextBox Text="{Binding ServerName, UpdateSourceTrigger=PropertyChanged}" Width="200" />
            <TextBlock Text="{Binding ServerName}" Margin="10" FontSize="18" Foreground="Green" />
        </StackPanel>
    </Grid>
</Window>